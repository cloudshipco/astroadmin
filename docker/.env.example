# AstroAdmin Production Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================

# Admin login credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-a-strong-password

# Session encryption key (generate with: openssl rand -hex 32)
SESSION_SECRET=change-me-to-a-64-character-random-string

# =============================================================================
# PREVIEW (Required for live editing preview)
# =============================================================================

# URL where the preview server is accessible from the browser
# This must be publicly accessible (or accessible to the editor's browser)
# Examples:
#   - http://preview.example.com (production with domain)
#   - http://localhost:4321 (local development)
PREVIEW_URL=http://preview.example.com

# =============================================================================
# GIT (Optional)
# =============================================================================

# Auto-push changes after commit (true/false)
# If false, users must manually click "Publish" to push
GIT_AUTO_PUSH=false

# =============================================================================
# BUILDER (Optional)
# =============================================================================

# How often to check for new commits (in seconds)
POLL_INTERVAL=60

# Git branch to track
BRANCH=main

# =============================================================================
# PORTS (Optional)
# =============================================================================

# nginx ports (change if 80/443 are in use)
HTTP_PORT=80
HTTPS_PORT=443
